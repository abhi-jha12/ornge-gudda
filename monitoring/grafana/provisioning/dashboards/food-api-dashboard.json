{
  "title": "Food API Monitoring",
  "uid": "food-api-monitoring",
  "tags": ["food-api"],
  "style": "dark",
  "timezone": "browser",
  "editable": true,
  "refresh": "5s",
  "time": {
    "from": "now-5m",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "title": "Request Rate",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(http_requests_total{job=\"food-api\"}[5m])",
          "legendFormat": "{{method}} {{handler}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "Response Time",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"food-api\"}[5m]))",
          "legendFormat": "95th percentile",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 0
      }
    },
    {
      "id": 3,
      "title": "Prediction Rate",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(food_classifier_predictions_total[5m])",
          "legendFormat": "{{class_label}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      }
    },
    {
      "id": 4,
      "title": "Prediction Latency",
      "type": "graph",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(food_classifier_latency_seconds_bucket[5m]))",
          "legendFormat": "95th percentile",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.5, rate(food_classifier_latency_seconds_bucket[5m]))",
          "legendFormat": "Median",
          "refId": "B"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      }
    },
    {
      "id": 5,
      "title": "Top Predicted Classes",
      "type": "piechart",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "topk(5, sum(food_classifier_predictions_total) by (class_label))",
          "legendFormat": "{{class_label}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 16
      }
    },
    {
      "id": 6,
      "title": "Prediction Confidence",
      "type": "heatmap",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(food_classifier_confidence_bucket[5m])) by (le, class_label)",
          "legendFormat": "{{class_label}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 16
      }
    },
    {
      "id": 7,
      "title": "Error Rate",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(food_classifier_errors_total[5m])",
          "legendFormat": "{{error_type}}",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 24
      }
    }
  ]
}
